# Application Configuration
APP_NAME=Mindscape
APP_VERSION=1.0.0-alpha
ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Security
SECRET_KEY=your-secret-key-here  # Used for application-level encryption
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://mindscape.app

# Static Files
STATIC_FILES_DIR=static
ICONS_DIR=static/icons
STYLES_DIR=static/styles

# Database Configuration
# For local development, use DATABASE_URL
# For production, use SUPABASE_URL and SUPABASE_KEY
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mindscape
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=5000
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret  # Production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://localhost:6379

# Performance
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=logs

# Testing
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_DEVICE=Desktop Chrome
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mindscape_test

# Logging
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Mindscape
VERSION=1.0.0

# Security Settings
# Generate strong secrets using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Multi-Factor Authentication
MFA_ENABLED=false
MFA_ISSUER=Mindscape

# Session Security
SESSION_COOKIE_MAX_AGE=604800  # 7 days
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CORS and Security Headers
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://mindscape.app
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,mindscape.io

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindscape

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Environment
ENVIRONMENT=development
DEBUG=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

